---
export interface Props {
  children: any;
}

const { children } = Astro.props;

// Configuración para compartir en Redes Sociales (LinkedIn/WhatsApp)
const socialImage = "https://franciscoaleuy.ca/assets/yo.jpg"; // Tu nueva foto
const siteTitle = "Francisco Aleuy – Building clarity between systems and people";
const siteDescription = "Technology and operations professional building clarity, reliability, and human connection in technical environments.";
const siteUrl = "https://franciscoaleuy.ca/";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>{siteTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <meta name="description" content={siteDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:image" content={socialImage} />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={siteDescription} />
    <meta name="twitter:image" content={socialImage} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />

    <style is:global>
      :root {
        --bg-color: #050810; 
        --accent-blue: #38bdf8;
        --text-main: #f8fafc;
        --text-muted: #94a3b8;
        --card-bg: rgba(15, 23, 42, 0.6);
        --border-color: rgba(255, 255, 255, 0.06);
      }

      html, body {
        background-color: var(--bg-color) !important;
        color: var(--text-main) !important;
        margin: 0;
        padding: 0;
        font-family: 'Inter', sans-serif;
        scroll-behavior: smooth;
        overflow-x: hidden;
      }

      .container {
        max-width: 750px; 
        margin: 0 auto;
        padding: 6rem 1.5rem;
      }

      header {
        margin-bottom: 6rem;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 2rem;
      }

      .site-title {
        font-size: 0.85rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.3em;
        color: var(--accent-blue);
      }

      .content h1 {
        font-size: 3.8rem;
        font-weight: 800;
        letter-spacing: -0.05em;
        line-height: 0.9;
        margin-bottom: 2rem;
      }

      .content h2 { 
        font-size: 1.6rem; 
        color: #fff !important;
        margin-top: 6rem;
        margin-bottom: 2.5rem;
      }

      .content p {
        font-size: 1.15rem;
        color: var(--text-muted) !important;
        line-height: 1.8;
      }

      /* Estilos para las tarjetas de habilidades */
      .content ul {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        padding: 0;
        list-style: none !important;
      }

      .content li {
        background: var(--card-bg) !important;
        border: 1px solid var(--border-color) !important;
        padding: 1.5rem 2rem !important;
        border-radius: 12px;
      }

      /* === ESTILOS DEL CARRUSEL CON FLECHAS === */
      .slider-container {
        position: relative;
        margin: 3rem 0;
      }

      .image-slider {
        display: flex;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        gap: 1rem;
        padding-bottom: 1rem;
        scrollbar-width: none;
      }
      .image-slider::-webkit-scrollbar { display: none; }

      .image-slider figure {
        flex: 0 0 90%;
        scroll-snap-align: center;
        margin: 0;
      }

      .image-slider img {
        width: 100%;
        aspect-ratio: 16 / 9;
        object-fit: cover;
        border-radius: 16px;
        border: 1px solid var(--border-color);
      }

      .slider-nav {
        position: absolute;
        top: 45%;
        transform: translateY(-50%);
        background: rgba(5, 8, 16, 0.8);
        color: var(--accent-blue);
        border: 1px solid var(--border-color);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 10;
        font-size: 1.8rem;
        line-height: 0;
        padding-bottom: 4px;
        transition: all 0.3s ease;
        backdrop-filter: blur(4px);
      }

      .slider-nav:hover {
        background: var(--accent-blue);
        color: var(--bg-color);
        border-color: var(--accent-blue);
        box-shadow: 0 0 15px rgba(56, 189, 248, 0.3);
      }

      .slider-nav.prev { left: -20px; }
      .slider-nav.next { right: -20px; }

      .image-slider figcaption {
        font-size: 0.9rem;
        color: var(--text-muted);
        margin-top: 1rem;
        text-align: center;
      }

      /* === Layout Imagen + Texto (Para The Voice) === */
      .media-text-container {
        display: flex;
        gap: 2rem;
        align-items: center;
        margin: 3rem 0;
      }
      
      .media-text-container img {
        width: 40%;
        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.5);
      }

      .media-text-content {
        flex: 1;
      }

      /* === Contenedor de Video Optimizado === */
      .video-wrapper {
        max-width: 600px;
        margin: 3rem auto;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid var(--border-color);
        box-shadow: 0 30px 60px -10px rgba(0,0,0,0.6);
      }

      /* === Botones de Contacto === */
      .contact-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
      }

      .contact-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        background: rgba(30, 41, 59, 0.4);
        border: 1px solid var(--border-color);
        padding: 1rem 2rem;
        border-radius: 12px;
        color: var(--text-main);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
      }

      .contact-btn:hover {
        background: rgba(56, 189, 248, 0.1);
        border-color: var(--accent-blue);
        transform: translateY(-3px);
        box-shadow: 0 10px 20px -5px rgba(56, 189, 248, 0.2);
        color: #fff;
        text-decoration: none;
      }

      /* ESTILO ESPECIAL PARA EL BOTÓN DE RESUME */
      .contact-btn.primary {
        background: rgba(56, 189, 248, 0.15);
        border-color: rgba(56, 189, 248, 0.4);
      }

      .contact-btn.primary:hover {
        background: rgba(56, 189, 248, 0.3);
      }

      .btn-icon {
        font-size: 1.2rem;
      }

      img, video {
        border-radius: 12px;
        border: 1px solid var(--border-color);
      }

      .signature {
        margin-top: 8rem;
        text-align: center;
        font-style: italic;
        color: var(--text-muted);
        font-size: 0.95rem;
      }

      footer {
        margin-top: 4rem;
        padding: 2rem 0;
        text-align: center;
        border-top: 1px solid var(--border-color);
        color: #334155;
      }

      @media (max-width: 640px) {
        .content h1 { font-size: 2.8rem; }
        .image-slider figure { flex: 0 0 100%; }
        .slider-nav { display: none; } 
        .slider-container { margin: 3rem -1rem; }
        .image-slider { padding: 0 1rem 1rem 1rem; }
        
        .media-text-container {
          flex-direction: column-reverse;
          gap: 1.5rem;
        }
        .media-text-container img { width: 100%; }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <p class="site-title">Francisco Aleuy</p>
      </header>
      <main class="content">
        <slot />
        <p class="signature">Building bridges between systems, people, and ideas.</p>
      </main>
      <footer>
        <p>© 2026 Francisco Aleuy — Southern Okanagan, BC</p>
      </footer>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const slider = document.querySelector('.image-slider');
        const prevBtn = document.querySelector('.slider-nav.prev');
        const nextBtn = document.querySelector('.slider-nav.next');

        if (slider && prevBtn && nextBtn) {
          nextBtn.addEventListener('click', () => {
            slider.scrollBy({ left: slider.clientWidth * 0.8, behavior: 'smooth' });
          });

          prevBtn.addEventListener('click', () => {
            slider.scrollBy({ left: -slider.clientWidth * 0.8, behavior: 'smooth' });
          });
        }
      });
    </script>
  </body>
</html>